{
  "mcpServers": {
    "mastra": {
      "command": "npx",
      "args": ["-y", "@mastra/mcp-docs-server"]
    },
    "better-auth": {
      "command": "npx",
      "args": ["@better-auth/mcp"]
    },
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    },
    "convex-mcp": {
      "command": "npx",
      "args": ["-y", "convex@latest", "mcp", "start"]
    },
    "ui-dojo": {
      "command": "npx",
      "args": ["mcp-remote", "https://gitmcp.io/mastra-ai/ui-dojo"]
    }
  }
}
